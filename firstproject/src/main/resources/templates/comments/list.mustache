<!-- 댓글 목록 -->
<div class="card text-dark bg-light mb-3" style="max-width: 18rem; margin: 10px; margin-top: 30px; ">
    {{#commentList}}
    <div class="card-header">{{nickname}}</div>
    <div class="card-body">
        <p class="card-text">{{body}}</p>
    </div>
    {{/commentList}}
</div>

<!-- 댓글 작성폼 -->
<div class="card text-dark bg-light mb-3 center" style="max-width: 18rem; margin: 10px; margin-top: 30px; ">
    <div class="card-body">
    <form id="create-comment-form">
        <!-- 닉네임 입력 -->
        <div class="mb-3" >
            <label class="form-label">UserName</label>
            <input type="email" class="form-control" id="new-comment-nickname">
        </div>
        <!-- 댓글 본문 입력 -->
        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea class="form-control" rows="3" id="new-comment-body"></textarea>
        </div>
        <!-- 히든 인풋 (articleId를 전송하기 위함) -->
        {{#article}}
        <input type="hidden" id="new-comment-article-id" value="{{id}}">
        {{/article}}
        <!-- 전송 버튼 -->
        <button type="button" id="create-comment-btn" class="btn btn-outline-primary">댓글 작성</button>
    </form>
    </div>
</div>
<script src = "/js/comment.js"></script>

